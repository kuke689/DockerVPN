#!/bin/bash
ps -ef | grep sshd | grep -v "grep" | grep -v "/usr/sbin/sshd" > /opt/sshinfo.log
ifconfig > /opt/ifconfig.log
/opt/vpnserver/vpncmd 127.0.0.1:33394 /server /password:`cat /opt/rootpasswd.log` /csv /hub:default /OUT:/opt/userlist.log /CMD:userlist
/opt/vpnserver/vpncmd 127.0.0.1:33394 /server /password:`cat /opt/rootpasswd.log` /csv /hub:default /OUT:/opt/SessionList.log /CMD:SessionList
cat /var/www/html/Head >/var/www/html/index.html
#######################
echo "<H3>SSH Info</h3><hr>" >>/var/www/html/index.html
cat /opt/sshinfo.log | while read LINE
do
echo $LINE >> /var/www/html/index.html
echo "<br/>" >> /var/www/html/index.html
done
#######################
echo "<H3>VPN User Info</h3><hr>" >>/var/www/html/index.html
cat /opt/userlist.log | while read LINE
do
echo $LINE >> /var/www/html/index.html
echo "<br/>" >> /var/www/html/index.html
done
#######################
cat /opt/SessionList.log | grep -v "SID-SECURENAT" > /opt/SessionListVPN.log
echo "<H3>VPN Session Info </h3><hr>" >>/var/www/html/index.html
cat /opt/SessionListVPN.log | while read LINE
do
echo $LINE >> /var/www/html/index.html
echo "<br/>" >> /var/www/html/index.html
done
#######################
echo "<H3>Interface Info</h3><hr>" >>/var/www/html/index.html
cat /opt/ifconfig.log | while read LINE
do
echo $LINE >> /var/www/html/index.html
echo "<br/>" >> /var/www/html/index.html
done
#######################
echo "</body>" >>/var/www/html/index.html
echo "</html>" >>/var/www/html/index.html

